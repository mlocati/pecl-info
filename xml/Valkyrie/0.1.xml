<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE package SYSTEM "http://pear.php.net/dtd/package-1.0">
<package version="1.0">
  <name>valkyrie</name>
  <summary>Valkyrie validation extension</summary>
  <description>This extension makes validating POST and GET parameters easier, through the use of a single XML file for declaring all parameters to be received by all files of an application. See http://www.xavier-noguer.com/valkyrie.html for details.</description>
  <maintainers>
    <maintainer>
      <user>xnoguer</user>
      <name>Xavier Noguer</name>
      <email>xnoguer@php.net</email>
      <role>lead</role>
    </maintainer>
  </maintainers>
  <release>
    <version>0.1</version>
    <date>2004-04-12</date>
    <license>PHP</license>
    <state>alpha</state>
    <notes>First release. It probably contains many bugs and should not under any circumstance be used in a production environment.</notes>
    <deps>
      <dep type="php" rel="ge" version="4.3.0"/>
    </deps>
    <configureoptions>
      <configureoption name="with-valkyrie" default="autodetect" prompt="libxml library installation dir?"/>
    </configureoptions>
    <filelist>
      <file role="src" md5sum="75afc310248fa101829b753691b8ccee" name="config.m4"/>
      <file role="src" md5sum="14bf6b741c7b0aef459eca93c75a435c" name="valkyrie.c"/>
      <file role="src" md5sum="e3c004b4652c1446e35d0549bb82e287" name="php_valkyrie.h"/>
      <file role="doc" md5sum="2148b828b4a2a57197309f5a009dcf17" name="CREDITS"/>
      <file role="doc" md5sum="7581680efa1c832fa52ffed03964542c" name="EXPERIMENTAL"/>
    </filelist>
  </release>
</package>

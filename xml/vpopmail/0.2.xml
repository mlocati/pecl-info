<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE package SYSTEM "http://pear.php.net/dtd/package-1.0">
<package version="1.0">
  <name>vpopmail</name>
  <summary>Provides functions to interact with vpopmail, a Qmail addon</summary>
  <description>A wrapper to vpopmail, a Qmail addon</description>
  <maintainers>
    <maintainer>
      <user>imajes</user>
      <name>James Cox</name>
      <email>imajes@php.net</email>
      <role>lead</role>
    </maintainer>
  </maintainers>
  <release>
    <version>0.2</version>
    <date>2002-10-10</date>
    <license>PHP</license>
    <state>beta</state>
    <notes>Package &amp; move to PECL</notes>
    <configureoptions>
      <configureoption name="with-vpopmail" default="autodetect" prompt="Vpopmail install directory?"/>
    </configureoptions>
    <filelist>
      <file role="src" name="php_vpopmail.c"/>
      <file role="src" name="php_vpopmail.h"/>
      <file role="src" name="config.m4"/>
      <file role="doc" name="CREDITS"/>
      <file role="doc" name="README">
        <replace from="/usr/local/bin" to="PHP_BINDIR" type="php-const"/>
        <replace from="@data_dir@" to="data_dir" type="pear-config"/>
      </file>
    </filelist>
  </release>
  <changelog>
    <release>
      <version>0.2</version>
      <date>2002-10-10</date>
      <state>beta</state>
      <notes>- Moving to PECL
</notes>
    </release>
  </changelog>
</package>
